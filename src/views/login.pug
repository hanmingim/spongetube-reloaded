extends base


block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="계정", name="username", type="text", required)
        input(placeholder="패스워드", name="password", type="password", required)
        input(type="submit", value="로그인")
        include partials/social-login
    div.auth-switch
        span Hoxy 계정이 없으신가요? 
        a(href="/join") 회원가입 &rarr;